# {{ ansible_managed }}

# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="{{ oh_my_zsh_theme|default(users_oh_my_zsh_theme) }}"

# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"

# Set to this to use case-sensitive completion
CASE_SENSITIVE="{{ oh_my_zsh_case_sensitive|default(users_oh_my_zsh_case_sensitive) }}"

# Uncomment this to disable bi-weekly auto-update checks
DISABLE_AUTO_UPDATE="{{ oh_my_zsh_disable_auto_update|default(users_oh_my_zsh_disable_auto_update) }}"

# Uncomment to change how often before auto-updates occur? (in days)
export UPDATE_ZSH_DAYS={{ oh_my_zsh_update_days|default(users_oh_my_zsh_update_days) }}

# Uncomment following line if you want to disable colors in ls
DISABLE_LS_COLORS="{{ oh_my_zsh_disable_ls_colors|default(users_oh_my_zsh_disable_ls_colors) }}"

# Uncomment following line if you want to disable autosetting terminal title.
DISABLE_AUTO_TITLE="{{ oh_my_zsh_disable_auto_title|default(users_oh_my_zsh_disable_auto_title) }}"

# Uncomment following line if you want to disable command autocorrection
DISABLE_CORRECTION="{{ oh_my_zsh_disable_correction|default(users_oh_my_zsh_disable_correction) }}"

# Uncomment following line if you want red dots to be displayed while waiting for completion
COMPLETION_WAITING_DOTS="{{ oh_my_zsh_completion_waiting_dots|default(users_oh_my_zsh_completion_waiting_dots) }}"

# Uncomment following line if you want to disable marking untracked files under
# VCS as dirty. This makes repository status check for large repositories much,
# much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"

# Uncomment following line if you want to  shown in the command execution time stamp
# in the history command output. The optional three formats: "mm/dd/yyyy"|"dd.mm.yyyy"|
# yyyy-mm-dd
# HIST_STAMPS="mm/dd/yyyy"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=({{ oh_my_zsh_plugins|default(users_oh_my_zsh_plugins) }})

source $ZSH/oh-my-zsh.sh

# User configuration

export PATH=$HOME/bin:/usr/local/bin:$PATH

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
  else
  export EDITOR='mvim'
fi

#Vim and Zsh
alias wtfvim="vim ~/.vimrc"
alias wtfzsh="vim ~/.zshrc"

alias doitagain="source ~/.zshrc"
alias aka="cat ~/.zshrc | grep alias"

alias catssh="cat ~/.ssh/config"
alias editssh="vim ~/.ssh/config"


# Git
alias gitrecent="git show-branch -r --list"

# Tmux
alias ta='tmux attach -t'
alias td='tmux detach -s'
alias ts='tmux new-session -s'
alias tl='tmux list-sessions'
alias tksv='tmux kill-server'
alias tkss='tmux kill-session -t'

# Network
alias whereami="curl ifconfig.me/ip"
